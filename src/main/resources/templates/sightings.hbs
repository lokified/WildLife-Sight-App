{{#partial "content"}}

    <h3>Sightings</h3>
    {{#each sightings}}
        <div class="border border-1 p-3 m-2">

            <p>Animal Id : {{id}}</p>
            <p>Location : {{location}}</p>
            <p>Ranger Name : {{rangerName}}</p>
            <p class="text-secondary">Recorded At {{timeSeen}}</p>

            <a class="btn btn-info btn-sm" href="/sightings/{{id}}/update">Edit</a>
            <a class="btn btn-danger btn-sm" href="/sightings/{{id}}/delete">Delete</a>

        </div>
    {{/each}}

    <a href="/sighting-form" class="btn btn-success btn-sm">Record Sighting</a> <br>

    <a href="/en-animal-form" class="btn btn-success btn-sm">Add endangered animal</a>
    <a href="/animal-form" class="btn btn-success btn-sm">Add animal</a>


{{/partial}}
{{> layout.hbs}}